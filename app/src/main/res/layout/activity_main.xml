<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="@dimen/shadow_distance"
                android:outlineSpotShadowColor="@color/black"
                android:padding="@dimen/indent_standard">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.casual"
                    android:textColor="@color/black"
                    android:text="@string/your_requests"
                    android:layout_marginEnd="@dimen/margin_tiny"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/update"
                    android:background="@drawable/round_disable"
                    android:drawableStart="@drawable/update"
                    android:padding="@dimen/margin_tiny"
                    style="@style/Button.Week"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profile_button"
                    style="@style/Button.Profile"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/indent_standard"
                android:background="@color/back">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="@dimen/shadow_distance"
                android:outlineSpotShadowColor="@color/black"
                android:padding="@dimen/indent_standard"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/new_button"
                    style="@style/Button.Plus"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/black"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:alpha="0.5"
            android:visibility="gone"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>