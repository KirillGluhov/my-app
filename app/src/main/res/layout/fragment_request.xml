<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_request_back"
    android:padding="@dimen/indent_standard"
    android:minWidth="1000dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_tiny">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_button"
            android:drawableStart="@drawable/back_dark"
            style="@style/Button.Week"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_tiny">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmButton"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/request_confirm"
            android:textSize="@dimen/base_text"
            style="@style/Button.Secondary"
            android:layout_marginEnd="@dimen/indent_standard"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/returnButton"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/request_return"
            android:textSize="@dimen/base_text"
            style="@style/Button.Secondary"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_button"
        android:layout_gravity="center"
        android:text=""
        android:drawableStart="@drawable/delete"
        android:padding="@dimen/margin_tiny"
        style="@style/Button.Plus"/>
    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Text.casual"
        android:textColor="@color/black"
        android:gravity="center"/>
</LinearLayout>