<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/request_first"
        android:padding="@dimen/indent_standard">
        <TextView
            android:id="@+id/firstTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Request.time"
            android:text="12:25"/>
        <TextView
            android:id="@+id/secondTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.Request.time"
            android:text="14:00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/request_second">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="@dimen/indent_standard">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Request.date"
                android:text="11.12.2024"
                android:layout_marginBottom="@dimen/margin_tiny"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/aud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.Request.info"
                    android:text="302"
                    android:layout_marginEnd="@dimen/margin_more_tiny"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/aud"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/request_accept"
            android:layout_gravity="center"/>

    </LinearLayout>
</LinearLayout>